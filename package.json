{
  "name": "omnilith",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @omnilith/web dev",
    "build": "pnpm -r build",
    "lint": "eslint packages/*/src",
    "test": "pnpm -r test",
    "check": "pnpm lint && pnpm build && pnpm test",
    "clean": "pnpm -r clean",
    "format": "prettier --write \"packages/*/src/**/*.ts\""
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@types/node": "^22",
    "eslint": "^9",
    "prettier": "^3.4.2",
    "typescript": "^5.7",
    "typescript-eslint": "^8"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
